<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp1.Views.WhoIsRunning">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <ScrollView Orientation="Horizontal">
            <StackLayout x:Name ="HooperImages" Orientation="Horizontal">
            </StackLayout>
            </ScrollView>
            <Image x:Name="GymImage" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HeightRequest="300" BackgroundColor="Gray"></Image>
            <Label x:Name="GymInfo" Text="{Binding Summary}"/>
            <Button Text="Join Run" VerticalOptions="End" HeightRequest="40" Clicked="JoinButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>