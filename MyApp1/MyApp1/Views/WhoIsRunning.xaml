<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp1.Views.WhoIsRunning">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <ScrollView Orientation="Horizontal">
            <StackLayout x:Name ="HooperImages" Orientation="Horizontal">
            </StackLayout>
            </ScrollView>
            <Image HorizontalOptions="FillAndExpand" VerticalOptions="Center" HeightRequest="400" BackgroundColor="Gray"></Image>
            <Label>Hoop Run 1</Label>
            <Label>222 fake street</Label>
            <Label>Detroit MI, 48000</Label>
            <Label>Time 8:00 PM Participation fee: $10</Label>
            <Label>Gender: All</Label>
            <Label>Directions</Label>
            <Button Text="Join Run" VerticalOptions="End" HeightRequest="40" Clicked="JoinButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>