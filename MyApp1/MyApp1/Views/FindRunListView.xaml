<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp1.Views.FindRunListView"
             Style="{StaticResource ContentPageStyle}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Entry Placeholder="Search Runs" Margin="10"></Entry>
            <StackLayout Orientation="Horizontal" Style="{StaticResource SideBySideButtonStyle}">
                <Button Text="List" BackgroundColor="Green"></Button>
                <Button Text="Map" BackgroundColor="White"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>