<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp1.Views.CreateAPlayerProfile"
             Style="{StaticResource ContentPageStyle}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Image BackgroundColor="Gray" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,20"></Image>
            <Entry x:Name="EmailEntry" Placeholder="Email" Margin="10" BackgroundColor="White"></Entry>
            <Entry x:Name="PasswordEntry" Placeholder="Password" Margin="10" BackgroundColor="White"></Entry>
            <Entry x:Name="FirstNameEntry" Placeholder="First Name" Margin="10" BackgroundColor="White"></Entry>
            <Entry x:Name="LastNameEntry" Placeholder="Last Name" Margin="10" BackgroundColor="White"></Entry>
            <Button x:Name="JoinButton" Text="Join" HorizontalOptions="Center" VerticalOptions="End" Clicked="JoinButton_OnClicked" BackgroundColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>